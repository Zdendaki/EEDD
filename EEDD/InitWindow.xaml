<Window x:Class="EEDD.InitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Elektronický dopravní deník" Height="120" Width="300" ResizeMode="NoResize" Loaded="Window_Loaded" Closing="Window_Closing">
    <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="10">
        <Label x:Name="MainLabel" Content="Probíhá připojování k serveru..." HorizontalAlignment="Center" Margin="0,10" />
        <ProgressBar Height="20" Margin="0,10" IsIndeterminate="True" />
    </StackPanel>
</Window>
