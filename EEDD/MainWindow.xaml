<Window x:Class="EEDD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EEDD"
        xmlns:c="clr-namespace:EEDD.Controls"
        mc:Ignorable="d" d:Background="DimGray"
        Title="Elektronický dopravní deník" Height="600" Width="1000" MinWidth="800" MinHeight="400" Closing="Window_Closing" Loaded="Window_Loaded" PreviewKeyDown="Window_PreviewKeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="Soubor">
                <MenuItem Header="Konec" />
            </MenuItem>
            <MenuItem Header="Úpravy">
                <MenuItem Header="Vložení řádku" InputGestureText="Insert" Click="InsertLine" />
                <Separator />
                <MenuItem Header="Oprava řádku" />
                <MenuItem Header="Zrušení řádku" />
                <MenuItem Header="Ukončení řádku" IsEnabled="False" />
                <Separator />
                <MenuItem Header="Návrat vlaku z tratě" IsEnabled="False" />
            </MenuItem>
            <MenuItem Header="Mimořádné">
                <MenuItem Header="Výluka" IsEnabled="False">
                    <MenuItem />
                </MenuItem>
                <MenuItem Header="Bezpečnostní štítek">
                    <MenuItem Header="Zavedení..." />
                    <MenuItem Header="Odstranění..." IsEnabled="False" />
                    <Separator />
                    <MenuItem Header="Zobrazení..." IsEnabled="False" />
                </MenuItem>
                <MenuItem Header="TZZ">
                    <MenuItem Header="Změna stavu..." />
                    <Separator />
                    <MenuItem Header="Zobrazení poruch TZZ" IsEnabled="False">
                        <MenuItem />
                    </MenuItem>
                </MenuItem>
                <MenuItem Header="Výluka dopravní služby" IsEnabled="False">
                    <MenuItem />
                </MenuItem>
                <MenuItem Header="Předání/převzetí dopravny" IsEnabled="False">
                    <MenuItem />
                </MenuItem>
                <MenuItem Header="Telefonická volnost">
                    <MenuItem Header="Začátek..." />
                    <MenuItem Header="Konec..." IsEnabled="False" />
                    <Separator />
                    <MenuItem Header="Zobrazení..." IsEnabled="False" />
                </MenuItem>
                <Separator />
                <MenuItem Header="Předvídaný odjezd telefonem" IsEnabled="False" />
                <MenuItem Header="Odeslání předpokládaného narušení" IsEnabled="False" />
                <MenuItem Header="Informace o vlaku" IsEnabled="False" />
                <MenuItem Header="Složení vlaku" IsEnabled="False" />
                <MenuItem Header="Dotaz na JŘ" IsEnabled="False" />
                <MenuItem Header="Zápis počasí..." />
            </MenuItem>
            <MenuItem Header="Plánování">
                <MenuItem Header="Podle GVD..." />
                <Separator />
                <MenuItem Header="Posun mezi dopravnami..." IsEnabled="False" />
            </MenuItem>
            <MenuItem Header="Parametry aplikace">
                <MenuItem Header="Nastavení" />
                <Separator />
                <MenuItem x:Name="NightView" Header="Noční režim" IsCheckable="True" Click="NightView_Click" />
            </MenuItem>
            <MenuItem Header="Komunikace">
                <MenuItem Header="Zprávy..." />
            </MenuItem>
            <MenuItem Header="Archivace" />
            <MenuItem Header="Nápověda">
                <MenuItem Header="O aplikaci..." />
            </MenuItem>
        </Menu>
        <WrapPanel Grid.Row="1" Orientation="Horizontal" Background="#F0F0F0">
            <WrapPanel.Resources>
                <Style TargetType="{x:Type Label}">
                    <Setter Property="FontSize" Value="14" />
                    <Setter Property="Padding" Value="10,5" />
                    <Setter Property="FontWeight" Value="DemiBold" />
                    <Setter Property="Foreground" Value="#A0A0A0" />
                </Style>
                <Style x:Key="Separator" TargetType="{x:Type Panel}">
                    <Setter Property="Background" Value="LightGray" />
                    <Setter Property="Width" Value="1" />
                </Style>
            </WrapPanel.Resources>
            <Label Content="Výluky" Margin="30,0,0,0" />
            <Label Content="Bezp. štítek" />
            <Label Content="Porucha TZZ" />
            <Label x:Name="Communication" Content="Komunikace" Background="Red" Foreground="#F0F0F0" />
            <Label Foreground="Red">
                <StackPanel Orientation="Horizontal">
                    <Path Data="{StaticResource RecycleGeometry}" Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType={x:Type Label}}}" VerticalAlignment="Bottom" Margin="0,0,0,2">
                        <Path.LayoutTransform>
                            <ScaleTransform ScaleX="-0.6" ScaleY="0.5" />
                        </Path.LayoutTransform>
                    </Path>
                    <TextBlock Text="Kvitance" Margin="3,0,0,0" />
                </StackPanel>
            </Label>
            <Label Content="Pohyb vlaku" />
            <Label Content="Skryté zápisy" />
            <Canvas Style="{StaticResource Separator}" />
            <Label Content="Zprávy" Foreground="Black" />
            <Canvas Style="{StaticResource Separator}" />
            <Label Content="(+)" Padding="10,5,5,5" MouseDown="LabelZoomIn_MouseDown" Foreground="Blue" FontWeight="Bold" Margin="50,0,0,0" />
            <Label Content="(–)" Padding="5,5,10,5" MouseDown="LabelZoomOut_MouseDown" Foreground="Blue" FontWeight="Bold" />
        </WrapPanel>

        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" HorizontalAlignment="Left" FocusVisualStyle="{x:Null}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.LayoutTransform>
                    <ScaleTransform x:Name="TableScale" ScaleX="1" ScaleY="1" />
                </Grid.LayoutTransform>

                <c:Header x:Name="RowHeader" Grid.Row="0" />

                <c:RowsList x:Name="Rows" Grid.Row="1" />
            </Grid>
        </ScrollViewer>

        <StatusBar Grid.Row="3">
            <StatusBarItem />
            <Separator />
            <StatusBarItem Content="Aktualizace: 01.01.2000 07:50" />
        </StatusBar>
    </Grid>
</Window>
