<Window x:Class="EEDD.Windows.InsertRowWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EEDD.Windows"
        mc:Ignorable="d" WindowStartupLocation="CenterOwner" ShowInTaskbar="False"
        Title="Vložení řádku" Width="350" ResizeMode="NoResize" SizeToContent="Height">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <GroupBox Header="Typ řádku" Margin="20,20,20,10" VerticalAlignment="Top">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <RadioButton x:Name="TrainSelect" Content="_Vlak" VerticalAlignment="Center" IsChecked="True" Margin="10" Checked="TrainSelect_Checked" Unchecked="TrainSelect_Checked" />
                <TextBox x:Name="TrainNumber" Width="80" Grid.Column="1" HorizontalAlignment="Left" MaxLength="6" VerticalAlignment="Center" Height="22" VerticalContentAlignment="Center" />

                <RadioButton x:Name="PMDSelect" Content="_PMD" Grid.Row="1" VerticalAlignment="Bottom" Margin="10,0" IsEnabled="False" />

                <RadioButton x:Name="TextSelect" Content="_Zápis" Grid.Row="2" VerticalAlignment="Bottom" Margin="10" Checked="TextSelect_Checked" Unchecked="TextSelect_Checked" />
                <ComboBox x:Name="TextType" Grid.Row="2" Grid.Column="1" IsEnabled="False" VerticalAlignment="Center" Height="22">
                    <ComboBoxItem Content="jiné modré" />
                    <ComboBoxItem Content="jiné červené" />
                    <ComboBoxItem Content="SEČ/SELČ" />
                    <ComboBoxItem Content="počasí" />
                    <ComboBoxItem Content="výpadek proudu" />
                    <ComboBoxItem Content="směna" />
                    <ComboBoxItem Content="dispečeři" />
                </ComboBox>
            </Grid>
        </GroupBox>

        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right" Margin="15,0">
            <Button x:Name="OK" Content="OK" Width="80" Margin="5,10" Height="24" IsDefault="True" Click="OK_Click" />
            <Button x:Name="Storno" Content="Storno" Width="80" Margin="5,10" Height="24" IsCancel="True" Click="Storno_Click" />
        </StackPanel>
    </Grid>
</Window>
