<Window x:Class="EEDD.Windows.ConnectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EEDD.Windows"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="EDD | Připojení k serveru" Height="300" Width="400" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl x:Name="Tabs" Grid.Row="0" SelectionChanged="TabControl_SelectionChanged" Margin="0,5">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Width" Value="125" />
                </Style>
            </TabControl.Resources>
            <TabItem Header="Server" IsSelected="True">
                <StackPanel Margin="5">
                    <Label Content="Adresa serveru:" />
                    <TextBox x:Name="ServerAddress" MaxLength="128" />

                    <Label Content="Port serveru:" />
                    <TextBox x:Name="ServerPort" MaxLength="5" />
                </StackPanel>
            </TabItem>
            <TabItem Header="Výběr tratě">
                <StackPanel Margin="5">
                    <Label Content="Vybrat trať:" />
                    <ComboBox x:Name="RouteSelect" />
                    <Label Content="Jméno uživatele (neslouží k ověření):" Margin="0,10,0,0" />
                    <TextBox x:Name="Username" MaxLength="64" />
                    <Label Content="Heslo tratě:" Margin="0,10,0,0" />
                    <PasswordBox x:Name="Password" MaxLength="64" />
                </StackPanel>
            </TabItem>
            <TabItem Header="Výběr stanice">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <ListBox x:Name="StationSelect" Margin="5,5,5,0" SelectionMode="Single" />
                    <Button x:Name="RefreshStations" Content="Obnovit seznam" Width="100" Height="24" Grid.Row="1" HorizontalAlignment="Left" Margin="5" Click="RefreshStations_Click" />
                </Grid>


            </TabItem>
        </TabControl>

        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right" Margin="0,-5,0,0">
            <Button x:Name="Previous" Content="Předchozí" Width="80" Margin="5,10" Height="24" IsEnabled="False" Click="Previous_Click" />
            <Button x:Name="Next" Content="Další" Width="80" Margin="5,10" Height="24" Click="Next_Click" IsDefault="True" />
        </StackPanel>
    </Grid>
</Window>
