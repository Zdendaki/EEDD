<c:Row x:Class="EEDD.Controls.RowTrain"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:l="clr-namespace:EEDD"
             xmlns:c="clr-namespace:EEDD.Controls"
             mc:Ignorable="d">
    <Border x:Name="border" BorderBrush="Black" BorderThickness="0.5" d:Background="{x:Static l:EDDBrushes.BackgroundYellow1}">
        <Grid HorizontalAlignment="Left">
            <Grid.RowDefinitions>
                <RowDefinition Height="20" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15" />
                <ColumnDefinition Width="45" />
                <ColumnDefinition Width="30" />
                <ColumnDefinition Width="25" />
                <ColumnDefinition Width="35" />
                <ColumnDefinition Width="37" />
                <ColumnDefinition Width="37" />
                <ColumnDefinition Width="15" />
                <ColumnDefinition Width="35" />
                <ColumnDefinition Width="35" />
                <ColumnDefinition Width="35" />
                <ColumnDefinition Width="15" x:Name="Signaller1" />
                <ColumnDefinition Width="15" x:Name="Signaller2" />
                <ColumnDefinition Width="0" x:Name="Signaller3" />
                <ColumnDefinition Width="0" x:Name="Signaller4" />
                <ColumnDefinition Width="0" x:Name="Signaller5" />
                <ColumnDefinition Width="0" x:Name="Signaller6" />
                <ColumnDefinition Width="35" />
                <ColumnDefinition Width="35" />
                <ColumnDefinition Width="35" />
                <ColumnDefinition Width="15" />
                <ColumnDefinition Width="15" />
                <ColumnDefinition Width="15" />
                <ColumnDefinition Width="15" />
                <ColumnDefinition Width="15" />
                <ColumnDefinition Width="15" />
                <ColumnDefinition Width="15" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <!--Řádek-->
            <c:EDDTextBox Text="P" x:Name="letter" Grid.Row="0" Grid.Column="0" MaxLength="1" EditMode="CanModify" TextAlignment="Center" />
            <c:EDDTextBox Text="49405" x:Name="number" Grid.Row="0" Grid.Column="1" MaxLength="6" EditMode="Locked" InnerBorder="{x:Static l:EDDBrushes.Brown}" />
            <c:EDDTextBox Text="Nex" x:Name="type" Grid.Row="0" Grid.Column="2" MaxLength="4" EditMode="CanModify" />
            <c:EDDTextBox Text="Ko" x:Name="direction" Grid.Row="0" Grid.Column="3" MaxLength="3" EditMode="Locked" />
            <c:EDDTextBox Text="1" x:Name="route" Grid.Row="0" Grid.Column="4" MaxLength="4" EditMode="CanModify" />
            <c:EDDTextBox Text="" x:Name="announced" Grid.Row="0" Grid.Column="5" MaxLength="5" Type="Time" EditMode="CanEdit" />
            <c:EDDTextBox Text="" x:Name="accepted" Grid.Row="0" Grid.Column="6" MaxLength="5" Type="Time" EditMode="CanModify" />
            <c:EDDTextBox Text="" Grid.Row="0" Grid.Column="7" MaxLength="1" EditMode="Locked" TextAlignment="Center" />
            <c:EDDTextBox Text="" x:Name="PMD" Grid.Row="0" Grid.Column="8" MaxLength="5" Type="Time" EditMode="CanModify" />
            <c:EDDTextBox Text="" x:Name="actualDep" Grid.Row="0" Grid.Column="9" MaxLength="5" Type="Time" EditMode="Locked" />
            <c:EDDTextBox Text="1" x:Name="track" Grid.Row="0" Grid.Column="10" MaxLength="4" Type="String" />
            <c:EDDTextBox Text="" Grid.Row="0" Grid.Column="11" MaxLength="1" EditMode="CanModify" TextAlignment="Center" />
            <c:EDDTextBox Text="" Grid.Row="0" Grid.Column="12" MaxLength="1" EditMode="CanModify" TextAlignment="Center" />
            <c:EDDTextBox Text="" Grid.Row="0" Grid.Column="13" MaxLength="1" EditMode="CanModify" TextAlignment="Center" />
            <c:EDDTextBox Text="" Grid.Row="0" Grid.Column="14" MaxLength="1" EditMode="CanModify" TextAlignment="Center" />
            <c:EDDTextBox Text="" Grid.Row="0" Grid.Column="15" MaxLength="1" EditMode="CanModify" TextAlignment="Center" />
            <c:EDDTextBox Text="" Grid.Row="0" Grid.Column="16" MaxLength="1" EditMode="CanModify" TextAlignment="Center" />
            <c:EDDTextBox Text="" x:Name="time" Grid.Row="0" Grid.Column="17" MaxLength="5" Type="Time" EditMode="Locked" />
            <c:EDDTextBox Text="" x:Name="delay" Grid.Row="0" Grid.Column="18" MaxLength="5" EditMode="Locked" TextAlignment="Right" />
            <c:EDDTextBox Text="" x:Name="departed" Grid.Row="0" Grid.Column="19" MaxLength="5" Type="Time" />
            
            <c:EDDTextBox Text="" x:Name="note" Grid.Row="0" Grid.Column="20" MaxLength="1" EditMode="CanModify" TextAlignment="Center" Background="White" />
            <c:EDDTextBox Text="" x:Name="approval" Grid.Row="0" Grid.Column="21" MaxLength="1" EditMode="CanModify" TextAlignment="Center" />
            <c:EDDTextBox Text="" x:Name="exceptions" Grid.Row="0" Grid.Column="22" MaxLength="1" EditMode="CanModify" TextAlignment="Center" />
            <c:EDDTextBox Text="" x:Name="contact" Grid.Row="0" Grid.Column="23" MaxLength="1" EditMode="CanModify" TextAlignment="Center" />
            <c:EDDTextBox Text="" x:Name="edit" Grid.Row="0" Grid.Column="24" MaxLength="1" EditMode="CanModify" TextAlignment="Center" />
            <c:EDDTextBox Text="" x:Name="cancel" Grid.Row="0" Grid.Column="25" MaxLength="1" EditMode="Locked" TextAlignment="Center" />
            <c:EDDTextBox Text="2" x:Name="operations" Grid.Row="0" Grid.Column="26" MaxLength="1" EditMode="CanModify" TextAlignment="Center" Caption="Manipulace s vozy&#x0a;Konec platnosti rozboru" />
            <c:EDDTextBox Text="" x:Name="sent" Grid.Row="0" Grid.Column="27" MaxLength="2" EditMode="Locked" TextAlignment="Right" />
            <c:EDDTextBox Text="" x:Name="path" Grid.Row="0" Grid.Column="28" Type="String" MaxLength="30" />
        </Grid>
    </Border>
</c:Row>
